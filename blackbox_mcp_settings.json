{
  "mcpServers": {
    "github.com/neo4j-contrib/mcp-neo4j": {
      "command": "uv",
      "args": [
        "run",
        "mcp-neo4j-cypher",
        "--transport",
        "sse",
        "--namespace",
        "default",
        "--server-host",
        "0.0.0.0",
        "--server-port",
        "8000"
      ],
      "env": {
        "NEO4J_URI": "bolt://localhost:7687",
        "NEO4J_USERNAME": "neo4j",
        "NEO4J_PASSWORD": "password",
        "NEO4J_DATABASE": "neo4j"
      }
    }
  }
}
